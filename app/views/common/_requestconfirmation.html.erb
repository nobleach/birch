Are you sure you want to delete mapping/imagery request for <%= @request.incident_name %>?

<script type="text/javascript">
  $( "#dialog-confirm" ).dialog( "option", "buttons", [
    {
      text: "Cancel",
      click: function() { $(this).dialog("close"); },      
    },{
      text: "Delete",
      click: function() { 
        var url = "<%= url_for(:controller => 'requests', :action => 'destroy', :id => @request.id) %>";
        $.post(url);
        window.location.href = "<%= url_for(:controller => 'requests', :action => 'list') %>"
      }
    }
  ] );
</script>